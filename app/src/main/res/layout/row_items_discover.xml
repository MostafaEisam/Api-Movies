<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:pew="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:id="@+id/rv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <ImageView
            android:id="@+id/iv_movieBackground"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/progress_bar_color"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_movieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="gkdsnkbdfklbnismbodfjabmldfmbidgnsbkdfm'bmfjsdjbijrdsgojdfomfdbmodfmobfpdob"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignLeft="@+id/tv_movieTitle"
                android:layout_below="@id/tv_movieTitle"
                android:src="@drawable/ic_action_favorite" />

            <TextView
                android:id="@+id/tv_numOfLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_like"
                android:layout_alignTop="@+id/iv_like"
                android:layout_below="@id/tv_movieTitle"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_toEndOf="@id/iv_like"
                android:gravity="center"
                android:text="35"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_numOfLikes"
                android:layout_alignTop="@id/tv_numOfLikes"
                android:layout_below="@id/tv_movieTitle"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_toEndOf="@id/tv_numOfLikes"
                android:gravity="center"
                android:text="Likes"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>